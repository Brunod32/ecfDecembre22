{% extends 'base.html.twig' %}

{% block title %}Partenaires{% endblock %}

{% block body %}
{% include('_navbar.html.twig') %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-5">Liste des partenaires</h1>
            </div>
        </div>
        <div class="mx-5 my-3">
            <a href="{{ path('app_partner_new') }}" class="btn btn-outline-primary">Créer un nouveau partenaire</a>
        </div>
    </div>


    <div class="container">
        {% for partner in partners %}

        <div class="card m-5">
            <div class="card-header text-center">
                <h4 class="card-title">{{ partner.id }} - {{ partner.name }}</h4>
            </div>

            <div class="d-flex justify-content-around">
                <div class="mt-3">
                    <h5>Identité du partenaire</h5>
                    <p><strong>Email:</strong> {{ partner.email }}</p>
                    <p><strong>Adresse:</strong> {{ partner.address }}</p>
                    <p><strong>Description:</strong> {{ partner.description }}</p>
                    <p><strong>Actif:</strong> {{ partner.active ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                </div>
                <div class="mt-3">
                    <h5>Permissions de la structure</h5>
                    <p><strong>Vente de nourriture:</strong> {{ partner.sellFood ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                    <p><strong>Vente de boisson:</strong> {{ partner.sellDrink ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                    <p><strong>Envoi de newsletter:</strong> {{ partner.sendNewsletter ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                    <p><strong>Gestion planning:</strong> {{ partner.scheduleManagement ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                    <p><strong>Cours particulier:</strong> {{ partner.privateLesson ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                </div>
            </div>
            <div class="card-footer text-muted d-flex justify-content-around">
                <a href="{{ path('app_partner_show', {'id': partner.id}) }}">Voir</a>
                <a href="{{ path('app_partner_edit', {'id': partner.id}) }}">Modifier</a>
            </div>
        </div>
 
        {% else %}
            <p colspan="13">Aucun enregistrement trouvé</p>
        {% endfor %}
            
    </div>
{% endblock %}
