{% extends 'base.html.twig' %}

{% block title %}Partenaires{% endblock %}

{% block body %}
{% include('_navbar.html.twig') %}
<div class="mainContainer">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-5">Liste des partenaires</h1>
            </div>
        </div>
        <div class="mx-5 my-3 d-flex justify-content-center">
            <a href="{{ path('app_partner_new') }}" class="btn btn-outline-primary">Créer un nouveau partenaire</a>
        </div>
    </div>


    <div class="container">
       {# Pagination #}
        <div class="m-5">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-around">
                {% if currentPage is same as 1 %}
                    <li class="page-item disabled"><a class="page-link" href="{{ path('app_partner_pagination', {'page': currentPage - 1 }) }}"><i class="fa-solid fa-angle-left fa-2x"></i></a></li>
                {% else %}
                    <li class="page-item"><a class="page-link" href="{{ path('app_partner_pagination', {'page': currentPage - 1 }) }}"><i class="fa-solid fa-angle-left fa-2x"></i></a></li>
                {% endif %}
                    <button class="btn btn-outline-success my-auto" id="activePartner">Actifs</button>
                    <button class="btn btn-outline-warning my-auto" id="unActivePartner">Inactifs</button>
                {% if maxPartner %}
                    <li class="page-item"><a class="page-link" href="{{ path('app_partner_pagination', {'page': currentPage + 1}) }}"><i class="fa-solid fa-angle-right fa-2x"></i></a></li>
                {% else %}
                    <li class="page-item disabled "><a class="page-link" href="{{ path('app_partner_pagination', {'page': currentPage + 1}) }}"><i class="fa-solid fa-angle-right fa-2x"></i></a></li>
                {% endif %}
                </ul>
            </nav>


            <div class="row">
                <div class="row row-cols-12 row-cols-lg-3 d-flex justify-content-around">
                    {% for partner in partners %}
                        <div class="card m-5">
                            <div class="card-header text-center">
                                <h4 class="card-title">{{ partner.id }} - {{ partner.name }}</h4>
                            </div>
                            <div class="row d-flex justify-content-around card__infos">
                                <div class="row row-cols-1 row-cols-lg-2">
                                    <div class="my-3">
                                        <h5>Identité du partenaire</h5>
                                        <p><strong>Email:</strong> {{ partner.email }}</p>
                                        <p><strong>Adresse:</strong> {{ partner.address | capitalize }}</p>
                                        <p><strong>Description:</strong> {{ partner.description | capitalize }}</p>
                                        <p><strong>Actif:</strong> {{ partner.active ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                                    </div>
                                    <div class="my-3">
                                        <h5>Permissions de la structure</h5>
                                        <p><strong>Vente de nourriture:</strong> {{ partner.sellFood ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                                        <p><strong>Vente de boisson:</strong> {{ partner.sellDrink ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                                        <p><strong>Envoi de newsletter:</strong> {{ partner.sendNewsletter ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                                        <p><strong>Gestion planning:</strong> {{ partner.scheduleManagement ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                                        <p><strong>Cours particulier:</strong> {{ partner.privateLesson ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                                    </div>
                                </div>
                            </div> 
                            <div class="card-footer text-muted d-flex justify-content-around">
                                <a href="{{ path('app_partner_show', {'id': partner.id}) }}" title="Voir"><i class="fa-solid fa-folder-open"></i></a>
                                <a href="{{ path('app_partner_edit', {'id': partner.id}) }}" title="Modifier"><i class="fa-solid fa-pen"></i></a>
                            </div>
                        </div>
                    {% else %}
                        <p colspan="13">Aucun enregistrement trouvé</p>
                    {% endfor %} 
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
