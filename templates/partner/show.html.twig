{% extends 'base.html.twig' %}

{% block title %}Détails partenaire{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-2">Détails partenaire</h1>
            </div>
        </div>
    </div>

    <div class="m-5">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ partner.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ partner.name }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ partner.email }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ partner.password }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ partner.address }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{{ partner.active ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ partner.description }}</td>
                </tr>
                <tr>
                    <th>SellFood</th>
                    <td>{{ partner.sellFood ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>SellDrink</th>
                    <td>{{ partner.sellDrink ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>SendNewsletter</th>
                    <td>{{ partner.sendNewsletter ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>ScheduleManagement</th>
                    <td>{{ partner.scheduleManagement ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>PrivateLesson</th>
                    <td>{{ partner.privateLesson ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="ms-5">
        <a href="{{ path('app_partner_index') }}" class="btn btn-outline-success mb-2">Retour à la liste</a>
        <br>
        <a href="{{ path('app_partner_edit', {'id': partner.id}) }}" class="btn btn-outline-primary">Modifier</a>

    {{ include('partner/_delete_form.html.twig') }}
    </div>
{% endblock %}
