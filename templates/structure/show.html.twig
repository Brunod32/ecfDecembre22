{% extends 'base.html.twig' %}

{% block title %} Détails Structure{% endblock %}

{% block body %}
{% include ('_navbar.html.twig') %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-2">Détails structure</h1>
            </div>
        </div>
   
        <div class="m-5">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ structure.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ structure.name }}</td>
                    </tr>
                    <tr>
                        <th>ManagerFirstname</th>
                        <td>{{ structure.managerFirstname }}</td>
                    </tr>
                    <tr>
                        <th>ManagerLastname</th>
                        <td>{{ structure.managerLastname }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ structure.email }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ structure.password }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ structure.address }}</td>
                    </tr>
                    <tr>
                        <th>Active</th>
                        <td>{{ structure.active ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>SellFood</th>
                        <td>{{ structure.sellFood ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>SellDrink</th>
                        <td>{{ structure.sellDrink ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>SendNewsletter</th>
                        <td>{{ structure.sendNewsletter ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>ScheduleManagement</th>
                        <td>{{ structure.scheduleManagement ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>PrivateLesson</th>
                        <td>{{ structure.privateLesson ? 'Yes' : 'No' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="ms-5">
            <a href="{{ path('app_structure_index') }}" class="btn btn-outline-success mb-2">Retour à la liste</a>
            <br>
            <a href="{{ path('app_structure_edit', {'id': structure.id}) }}" class="btn btn-outline-primary">Modifier</a>

            {{ include('structure/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
