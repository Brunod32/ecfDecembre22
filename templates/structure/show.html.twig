{% extends 'base.html.twig' %}

{% block title %} Détails Structure{% endblock %}

{% block body %}
{% include ('_navbar.html.twig') %}
<div class="mainContainer">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-2">Détails structure {{ structure.id }} - {{ structure.name }}</h1>
            </div>
        </div>

        <div class="d-flex justify-content-around">
            <div class="mt-3">
                <h2 class="mb-3">Identité de la structure</h2>
                <p><strong>Nom du manager:</strong> {{ structure.managerLastname }}</p>
                <p><strong>Prénom du manager:</strong> {{ structure.managerFirstname }}</p>
                <p><strong>Email:</strong> {{ structure.email }}</p>
                <p><strong>Adresse:</strong> {{ structure.address }}</p>
                <p><strong>Actif:</strong> {{ structure.active ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>

            </div>
            <div class="mt-3">
                <h2 class="mb-3">Permissions du partenaire</h2>
                    <p><strong>Vente de nourriture:</strong> {{ structure.sellFood ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                    <p><strong>Vente de boisson:</strong> {{ structure.sellDrink ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                    <p><strong>Envoi de newsletter:</strong> {{ structure.sendNewsletter ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                    <p><strong>Envoi de newsletter:</strong> {{ structure.scheduleManagement ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                    <p><strong>Cours prticuliers:</strong> {{ structure.privateLesson ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
            </div>
        </div>
        <div class="ms-5">
            <a href="{{ path('app_structure_index') }}" class="btn btn-outline-success mb-2">Retour à la liste</a>
            <br>
            <a href="{{ path('app_structure_edit', {'id': structure.id}) }}" class="btn btn-outline-primary">Modifier</a>

            {{ include('structure/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
