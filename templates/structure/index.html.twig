{% extends 'base.html.twig' %}

{% block title %}Structures{% endblock %}

{% block body %}
{% include('_navbar.html.twig') %}
<div class="mainContainer">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-5">Liste des structures</h1>
            </div>
        </div>    
        <div class="my-3 mx-5 btn-new">
            <a href="{{ path('app_structure_new') }}" class="btn btn-outline-primary">Créer une nouvelle structure</a>
        </div>

        <div class="container">
                {% for structure in structures %}

                <div class="card m-5">
                    <div class="card-header text-center">
                        <h4 class="card-title">{{ structure.id }} - {{ structure.name }}</h4>
                    </div>
                    <div class="d-flex justify-content-around">
                        <div class="mt-3">
                            <h5>Identité de la structure</h5>
                            <p><strong>Prénom du manager:</strong> {{ structure.managerFirstname }}</p>
                            <p><strong>Nom du manager:</strong> {{ structure.managerLastname }}</p>
                            <p><strong>Email:</strong> {{ structure.email }}</p>
                            <p><strong>Adresse:</strong> {{ structure.address }}</p>
                            <p><strong>Actif:</strong> {{ structure.active ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                        </div>
                        <div class="mt-3">
                            <h5>Permissions de la structure</h5>
                            <p><strong>Vente de nourriture:</strong> {{ structure.sellFood ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                            <p><strong>Vente de boissons:</strong> {{ structure.sellDrink ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                            <p><strong>Envoie de Newsletter:</strong> {{ structure.sendNewsletter ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                            <p><strong>Gestion planning:</strong> {{ structure.scheduleManagement ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                            <p><strong>Cours particulier:</strong> {{ structure.privateLesson ? '<i class="fa-solid fa-check check fa-2x"></i>' : '<i class="fa-solid fa-circle-xmark uncheck fa-2x"></i>' }}</p>
                        </div>
                    </div>
                    <div class="card-footer text-muted d-flex justify-content-around">
                        <a href="{{ path('app_structure_show', {'id': structure.id}) }}" title="Voir"><i class="fa-solid fa-folder-open"></i></a>
                        <a href="{{ path('app_structure_edit', {'id': structure.id}) }}" title="Modifier"><i class="fa-solid fa-pen"></i></a>
                    </div>
                </div>                                           
                {% else %}
                    <p colspan="14">Aucun enregistrement trouvé</p>
                {% endfor %}    
        </div>
    </div>
<div>
{% endblock %}
